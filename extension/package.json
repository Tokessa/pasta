{
    "name": "stpa-dsl",
    "displayName": "STPA",
    "description": "An DSL for STPA with Sprotty diagrams",
    "repository": {
        "type": "git"
    },
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "stpa",
                "aliases": [
                    "stpa"
                ],
                "extensions": [
                    ".stpa"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "stpa",
                "scopeName": "source.stpa",
                "path": "./syntaxes/stpa.tmLanguage.json"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:stpa"
    ],
    "files": [
        "lib",
        "extension",
        "server",
        "syntaxes"
    ],
    "bin": {
        "blabb-cli": "./bin/cli"
    },
    "main": "./out/stpa-extension",
    "dependencies": {
        "colors": "^1.4.0",
        "commander": "^8.0.0",
        "langium": "^0.2.0"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/vscode": "^1.56.0",
        "rimraf": "^2.6.3",
        "source-map-loader": "^1.0.2",
        "ts-loader": "^8.0.3",
        "tslint": "^5.11.0",
        "typescript": "3.8.3",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0",
        "webpack": "^4.44.1",
        "webpack-cli": "^3.3.12",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "langium-cli": "^0.2.0"
    },
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch",
        "prepare": "yarn run clean && yarn run build",
        "clean": "rimraf extension/lib extension/out",
        "watch:webpack": "webpack --mode=development --watch",
        "publish": "vsce publish"
    }
}
