{
    "name": "pasta",
    "displayName": "PASTA (STPA-DSL)",
    "description": "A DSL for STPA. Includes an automatic visualization of the defined relationships and control structure.",
    "version": "0.2.0",
    "publisher": "kieler",
    "author": "Kiel University <rt-kieler-devel@informatik.uni-kiel.de>",
    "icon": "icon.png",
    "license": "EPL-2.0",
    "repository": {
        "type": "git",
        "url": "https://github.com/kieler/stpa"
    },
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "stpa",
                "aliases": [
                    "stpa",
                    "stpa"
                ],
                "extensions": [
                    ".stpa"
                ],
                "configuration": "./language-configuration.json"
            },
            {
                "id": "fta",
                "aliases": [
                    "fta",
                    "fta"
                ],
                "extensions": [
                    ".fta"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "stpa",
                "scopeName": "source.stpa",
                "path": "./syntaxes/stpa.tmLanguage.json"
            },
            {
                "language": "fta",
                "scopeName": "source.fta",
                "path": "./syntaxes/fta.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "pasta",
            "properties": {
                "pasta.differentForms": {
                    "type": "boolean",
                    "default": false,
                    "description": "Different forms for STPA aspects"
                },
                "pasta.colorStyle": {
                    "type": "string",
                    "default": "fewer colors",
                    "enum": [
                        "colorful",
                        "standard",
                        "black & white",
                        "fewer colors"
                    ],
                    "enumDescription": [
                        "Each STPA aspect has a different color",
                        "All nodes have the standard color (blue)",
                        "The diagrams are colored in black and white"
                    ]
                },
                "pasta.checkResponsibilitiesForConstraints": {
                    "type": "boolean",
                    "default": true,
                    "description": "Check whether all system-level constraints are covered by a responsibility"
                },
                "pasta.checkConstraintsForUCAs": {
                    "type": "boolean",
                    "default": true,
                    "description": "Check whether all UCAs are covered by constraints"
                },
                "pasta.checkScenariosForUCAs": {
                    "type": "boolean",
                    "default": true,
                    "description": "Check whether all UCAs are covered by scenarios"
                },
                "pasta.checkSafetyRequirementsForUCAs": {
                    "type": "boolean",
                    "default": true,
                    "description": "Check whether all UCAs are covered by safety requirements"
                }
            }
        },
        "commands": [
            {
                "command": "stpa.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.contextTable.open",
                "title": "Show Context Tables",
                "icon": "$(table)",
                "category": "Context Table"
            },
            {
                "command": "stpa.diagram.fit",
                "title": "Fit to Screen",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.center",
                "title": "Center selection",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.delete",
                "title": "Delete selected element",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.export",
                "title": "Export diagram to SVG",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.checks.setCheckResponsibilitiesForConstraints",
                "title": "Set the responsibilities for constraints check",
                "category": "STPA Checks"
            },
            {
                "command": "stpa.checks.checkConstraintsForUCAs",
                "title": "Set the constraints for UCA check",
                "category": "STPA Checks"
            },
            {
                "command": "stpa.checks.checkScenariosForUCAs",
                "title": "Set the scenarios for UCA check",
                "category": "STPA Checks"
            },
            {
                "command": "stpa.checks.checkSafetyRequirementsForUCAs",
                "title": "Set the safety requirements for UCA check",
                "category": "STPA Checks"
            },
            {
                "command": "stpa.IDs.undo",
                "title": "Executes the undo action",
                "category": "STPA ID Enforcement"
            },
            {
                "command": "stpa.IDs.redo",
                "title": "Executes the redo action",
                "category": "STPA ID Enforcement"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "stpa.diagram.open",
                    "when": "editorLangId == 'stpa'"
                },
                {
                    "command": "stpa.contextTable.open",
                    "when": "editorLangId == 'stpa'"
                },
                {
                    "command": "stpa.contextTable.open",
                    "when": "editorLangId == 'stpa'"
                },
                {
                    "command": "stpa.diagram.fit",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.diagram.center",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.diagram.delete",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.diagram.export",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.checks.setCheckResponsibilitiesForConstraints",
                    "when": "editorLangId == 'stpa'"
                },
                {
                    "command": "stpa.checks.checkConstraintsForUCAs",
                    "when": "editorLangId == 'stpa'"
                },
                {
                    "command": "stpa.checks.checkScenariosForUCAs",
                    "when": "editorLangId == 'stpa'"
                },
                {
                    "command": "stpa.checks.checkSafetyRequirementsForUCAs",
                    "when": "editorLangId == 'stpa'"
                }
            ],
            "editor/context": [
                {
                    "command": "stpa.diagram.open",
                    "when": "editorLangId == 'stpa'",
                    "group": "navigation"
                },
                {
                    "command": "stpa.contextTable.open",
                    "when": "editorLangId == 'stpa'",
                    "group": "navigation"
                },
                {
                    "submenu": "stpa.checks",
                    "group": "checks"
                }
            ],
            "stpa.checks": [
                {
                    "command": "stpa.checks.setCheckResponsibilitiesForConstraints",
                    "title": "editorLangId == 'stpa'",
                    "group": "navigation"
                },
                {
                    "command": "stpa.checks.checkConstraintsForUCAs",
                    "title": "editorLangId == 'stpa'",
                    "group": "navigation"
                },
                {
                    "command": "stpa.checks.checkScenariosForUCAs",
                    "title": "editorLangId == 'stpa'",
                    "group": "navigation"
                },
                {
                    "command": "stpa.checks.checkSafetyRequirementsForUCAs",
                    "title": "editorLangId == 'stpa'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "stpa.diagram.open",
                    "when": "editorLangId == 'stpa'",
                    "group": "navigation"
                },
                {
                    "command": "stpa.contextTable.open",
                    "when": "editorLangId == 'stpa'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "stpa.diagram.open",
                    "when": "resourceExtname == '.stpa'",
                    "group": "navigation"
                },
                {
                    "command": "stpa.contextTable.open",
                    "when": "resourceExtname == '.stpa'",
                    "group": "navigation"
                }
            ]
        },
        "submenus": [
            {
                "id": "stpa.checks",
                "label": "Validation Checks"
            }
        ],
        "keybindings": [
            {
                "key": "alt+f",
                "mac": "alt+f",
                "command": "stpa.diagram.fit",
                "when": "stpa-diagram-focused"
            },
            {
                "key": "alt+c",
                "mac": "alt+c",
                "command": "stpa.diagram.center",
                "when": "stpa-diagram-focused"
            },
            {
                "key": "alt+e",
                "mac": "alt+e",
                "command": "stpa.diagram.export",
                "when": "stpa-diagram-focused"
            },
            {
                "key": "delete",
                "mac": "delete",
                "command": "stpa.diagram.delete",
                "when": "stpa-diagram-focused"
            },
            {
                "key": "ctrl+z",
                "mac": "cmd+z",
                "command": "stpa.IDs.undo",
                "when": "editorTextFocus"
            },
            {
                "key": "ctrl+y",
                "mac": "cmd+y",
                "command": "stpa.IDs.redo",
                "when": "editorTextFocus"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:stpa",
        "onLanguage:fta",
        "onCommand:pasta.getLTLFormula"
    ],
    "files": [
        "lib",
        "extension",
        "server",
        "syntaxes",
        "webview"
    ],
    "main": "./pack/extension",
    "dependencies": {
        "langium-sprotty": "^1.0.0",
        "sprotty-elk": "^0.12.0",
        "vscode-languageserver": "^8.0.2",
        "vscode-languageclient": "^8.0.2",
        "reflect-metadata": "^0.1.13",
        "feather-icons": "^4.28.0",
        "sprotty": "^0.12.0",
        "sprotty-vscode-webview": "^0.4.0",
        "@kieler/table-webview": "^0.0.1",
        "snabbdom": "^3.5.1"
    },
    "devDependencies": {
        "@types/node": "^12.12.6",
        "@types/vscode": "1.46.0",
        "@types/feather-icons": "^4.7.0",
        "rimraf": "^3.0.2",
        "source-map-loader": "^3.0.0",
        "sprotty-vscode": "^0.4.0",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.3",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "css-loader": "^6.7.2",
        "file-loader": "^6.2.0",
        "langium-cli": "^1.0.0",
        "style-loader": "^3.3.1",
        "vsce": "^2.15.0",
        "ovsx": "^0.6.0"
    },
    "scripts": {
        "prepare": "yarn run clean && yarn run langium:generate && yarn run build",
        "clean": "rimraf pack",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch",
        "lint": "eslint .",
        "build": "yarn run langium:generate && webpack --mode production",
        "watch": "webpack --watch",
        "package": "vsce package --yarn -o pasta.vsix",
        "predistribute": "yarn run package",
        "distribute": "yarn run distribute:vsce && yarn run distribute:ovsx",
        "distribute:vsce": "vsce publish --yarn --packagePath pasta.vsix",
        "distribute:ovsx": "ovsx publish --yarn pasta.vsix"
    }
}
