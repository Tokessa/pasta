{
    "name": "stpa",
    "displayName": "STPA-DSL",
    "description": "A DSL for STPA. Includes an automatic visualization of the defined relationships and control structure.",
    "version": "0.0.1",
    "publisher": "kieler",
    "author": "Kiel University <rt-kieler-devel@informatik.uni-kiel.de>",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "stpa",
                "aliases": [
                    "stpa",
                    "stpa"
                ],
                "extensions": [
                    ".stpa"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "stpa",
                "scopeName": "source.stpa",
                "path": "./syntaxes/stpa.tmLanguage.json"
            }
        ],
        "configuration": {
            "title": "STPA",
            "properties": {
                "stpa.differentForms": {
                    "type": "boolean",
                    "default": false,
                    "description": "Different forms for STPA aspects"
                },
                "stpa.colorStyle": {
                    "type": "string",
                    "default": "fewer colors",
                    "enum": ["colorful", "standard", "black & white", "fewer colors"],
                    "enumDescription": ["Each STPA aspect has a different color", "All nodes have the standard color (blue)", "The diagrams are colored in black and white"]
                },
                "stpa.templates": {
                    "type": "string[]",
                    "default": [],
                    "description": "Templates for STPA"
                }
            }
        },
        "commands": [
            {
                "command": "stpa.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.fit",
                "title": "Fit to Screen",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.center",
                "title": "Center selection",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.delete",
                "title": "Delete selected element",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.export",
                "title": "Export diagram to SVG",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.templates.add",
                "title": "Add STPA Template",
                "category": "STPA Templates"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "stpa.diagram.open",
                    "when": "editorLangId == 'stpa'"
                },
                {
                    "command": "stpa.diagram.fit",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.diagram.center",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.diagram.delete",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.diagram.export",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.templates.add"
                }
            ],
            "editor/context": [
                {
                    "command": "stpa.diagram.open",
                    "when": "editorLangId == 'stpa'",
                    "group": "navigation"
                },
                {
                    "command": "stpa.templates.add",
                    "when": "editorLangId == 'stpa'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "stpa.diagram.open",
                    "when": "editorLangId == 'stpa'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "stpa.diagram.open",
                    "when": "resourceExtname == '.stpa'",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "key": "alt+f",
                "mac": "alt+f",
                "command": "stpa.diagram.fit",
                "when": "stpa-diagram-focused"
            },
            {
                "key": "alt+c",
                "mac": "alt+c",
                "command": "stpa.diagram.center",
                "when": "stpa-diagram-focused"
            },
            {
                "key": "alt+e",
                "mac": "alt+e",
                "command": "stpa.diagram.export",
                "when": "stpa-diagram-focused"
            },
            {
                "key": "delete",
                "mac": "delete",
                "command": "stpa.diagram.delete",
                "when": "stpa-diagram-focused"
            }
        ],
        "viewsContainers": {
            "activitybar": [
              {
                "id": "stpa",
                "title": "STPA",
                "icon": "./icon.png"
              }
            ]
          },
          "views": {
            "stpa": [
              {
                "type": "webview",
                "id": "stpa-templates",
                "name": "STPA Templates"
              }
            ]
          }
    },
    "activationEvents": [
        "onLanguage:stpa",
        "onCommand:stpa.diagram.open"
    ],
    "files": [
        "lib",
        "extension",
        "server",
        "syntaxes",
        "webview"
    ],
    "main": "./pack/extension",

    "dependencies": {
        "langium-sprotty": "0.3.0-next.5e9d27d",
        "sprotty-elk": "^0.11.0",
        "vscode-languageserver": "^7.0.0",
        "reflect-metadata": "^0.1.13",
        "feather-icons": "^4.28.0",
        "sprotty": "~0.11.1",
        "sprotty-vscode-webview": "^0.2.0"
      },
    "devDependencies": {
        "@types/node": "^12.12.6",
        "@types/vscode": "1.67.0",
        "@types/feather-icons": "^4.7.0",
        "rimraf": "^3.0.2",
        "source-map-loader": "^3.0.0",
        "sprotty-vscode": "^0.2.0",
        "ts-loader": "^9.2.6",
        "typescript": "3.8.3",
        "vscode-languageclient": "^7.0.0",
        "webpack": "^5.64.2",
        "webpack-cli": "^4.9.1",
        "css-loader": "^6.5.1",
        "file-loader": "^6.2.0",
        "langium-cli": "0.3.0-next.5e9d27d",
        "style-loader": "^1.2.1"
    },
    "scripts": {
        "prepare": "yarn run clean && yarn run langium:generate && yarn run build",
        "clean": "rimraf pack",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch",
        "lint": "eslint .",
        "build": "yarn run langium:generate && webpack --mode production",
        "watch": "yarn run langium:watch && webpack --watch",
        "package": "yarn run langium:generate && vsce package --yarn -o stpa-dsl.vsix",
        "vscode:prepublish": "yarn run build"
    }
}
