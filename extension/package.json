{
    "name": "stpa",
    "displayName": "STPA-DSL",
    "description": "Please enter a brief description here",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "stpa",
                "aliases": [
                    "stpa",
                    "stpa"
                ],
                "extensions": [
                    ".stpa"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "stpa",
                "scopeName": "source.stpa",
                "path": "./syntaxes/stpa.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "stpa.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.fit",
                "title": "Fit to Screen",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.center",
                "title": "Center selection",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.delete",
                "title": "Delete selected element",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.export",
                "title": "Export diagram to SVG",
                "category": "STPA Diagram"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "stpa.diagram.open",
                    "when": "editorLangId == 'stpa'"
                },
                {
                    "command": "stpa.diagram.fit",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.diagram.center",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.diagram.delete",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.diagram.export",
                    "when": "stpa-diagram-focused"
                }
            ],
            "editor/context": [
                {
                    "command": "stpa.diagram.open",
                    "when": "editorLangId == 'stpa'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "stpa.diagram.open",
                    "when": "editorLangId == 'stpa'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "stpa.diagram.open",
                    "when": "resourceExtname == '.stpa'",
                    "group": "navigation"
                }
            ]
        }
    },
    "activationEvents": [
        "onLanguage:stpa",
        "onCommand:stpa.diagram.open"
    ],
    "files": [
        "bin",
        "out",
        "src",
        "lib",
        "extension",
        "syntaxes",
        "webview"
    ],
    "bin": {
        "stpa-cli": "./bin/cli"
    },
    "main": "./out/extension.js",
    "scripts": {
        "vscode:prepublish": "npm run build && npm run lint",
        "build": "tsc -b tsconfig.json",
        "watch": "tsc -b tsconfig.json --watch",
        "lint": "eslint src --ext ts",
        "langium:generate": "langium generate",
        "langium:watch": "langium generate --watch"
    },
    "dependencies": {
        "colors": "^1.4.0",
        "commander": "^8.0.0",
        "langium": "^0.2.0",
        "vscode-languageclient": "^7.0.0",
        "vscode-languageserver": "^7.0.0",
        "packages-vscode": "../packages/sprotty-vscode-extension"
    },
    "devDependencies": {
        "@types/node": "^14.17.3",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^4.14.1",
        "@typescript-eslint/parser": "^4.14.1",
        "eslint": "^7.19.0",
        "langium-cli": "^0.2.0",
        "typescript": "^4.1.3"
    }
}
