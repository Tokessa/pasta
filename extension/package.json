{
    "name": "stpa",
    "displayName": "STPA-DSL",
    "description": "A DSL for STPA. Includes an automatic visualization of the defined relationships and control structure.",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.46.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "stpa",
                "aliases": [
                    "stpa",
                    "stpa"
                ],
                "extensions": [
                    ".stpa"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "stpa",
                "scopeName": "source.stpa",
                "path": "./syntaxes/stpa.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "stpa.diagram.open",
                "title": "Open in Diagram",
                "icon": "$(symbol-structure)",
                "category": "STPA Diagram"
            },
            {
                "command": "contextTable.open",
                "title": "Show Context Tables",
                "icon": "$(server-process)",
                "category": "Context Table"
            },
            {
                "command": "stpa.diagram.fit",
                "title": "Fit to Screen",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.center",
                "title": "Center selection",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.delete",
                "title": "Delete selected element",
                "category": "STPA Diagram"
            },
            {
                "command": "stpa.diagram.export",
                "title": "Export diagram to SVG",
                "category": "STPA Diagram"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "stpa.diagram.open",
                    "when": "editorLangId == 'stpa'"
                },
                {
                    "command": "contextTable.open",
                    "when": "editorLangId == 'stpa'"
                },
                {
                    "command": "stpa.diagram.fit",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.diagram.center",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.diagram.delete",
                    "when": "stpa-diagram-focused"
                },
                {
                    "command": "stpa.diagram.export",
                    "when": "stpa-diagram-focused"
                }
            ],
            "editor/context": [
                {
                    "command": "stpa.diagram.open",
                    "when": "editorLangId == 'stpa'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "stpa.diagram.open",
                    "when": "editorLangId == 'stpa'",
                    "group": "navigation"
                },     
                {
                    "command": "contextTable.open",
                    "when": "editorLangId == 'stpa'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "stpa.diagram.open",
                    "when": "resourceExtname == '.stpa'",
                    "group": "navigation"
                }
            ]
        },
        "keybindings": [
            {
                "key": "alt+f",
                "mac": "alt+f",
                "command": "stpa.diagram.fit",
                "when": "stpa-diagram-focused"
            },
            {
                "key": "alt+c",
                "mac": "alt+c",
                "command": "stpa.diagram.center",
                "when": "stpa-diagram-focused"
            },
            {
                "key": "alt+e",
                "mac": "alt+e",
                "command": "stpa.diagram.export",
                "when": "stpa-diagram-focused"
            },
            {
                "key": "delete",
                "mac": "delete",
                "command": "stpa.diagram.delete",
                "when": "stpa-diagram-focused"
            }
        ]
    },
    "activationEvents": [
        "onLanguage:stpa",
        "onCommand:stpa.diagram.open",
        "onCommand:contextTable.open"
    ],
    "files": [
        "lib",
        "extension",
        "server",
        "syntaxes",
        "webview"
    ],
    "main": "./pack/extension",

    "devDependencies": {
        "@types/node": "^12.12.6",
        "@types/vscode": "1.46.0",
        "rimraf": "^3.0.2",
        "source-map-loader": "^3.0.0",
        "sprotty-vscode": "^0.2.0",
        "stpa-language-server": "^0.0.0",
        "stpa-sprotty-webview": "^0.0.8",
        "ts-loader": "^9.2.6",
        "typescript": "3.8.3",
        "vscode-languageclient": "^7.0.0",
        "webpack": "^5.64.2",
        "webpack-cli": "^4.9.1",
        "context-table-webview": "^0.0.1"
    },
    "scripts": {
        "prepare": "yarn run clean && yarn run build && yarn run copy-language-server && yarn run copy-webview",
        "clean": "rimraf pack",
        "build": "webpack --mode=development",
        "watch": "webpack --mode=development --watch",
        "copy-language-server": "copy ..\\language-server\\out\\* pack",
        "copy-webview": "xcopy ..\\webview\\out\\* pack"
    }
}
