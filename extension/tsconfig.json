{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es2019",
      "outDir": "pack",
      "lib": ["es2019", "dom"],
      "jsx": "react",
      "jsxFactory": "jsx",
      "sourceMap": true,
      "rootDir": "src",
      "strict": true, // enable all strict type-checking options
      /* Additional Checks */
      "strictPropertyInitialization": false, // No need to initialize every variable
      "declaration": false,
      "noImplicitAny": true,
      "noEmitOnError": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "skipLibCheck": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", ".vscode-test"]
}
