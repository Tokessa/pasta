{
  "name": "stpa",
  "scopeName": "source.stpa",
  "fileTypes": [
    ".stpa"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.stpa",
      "match": "\\b(applied-too-long|Context-Table|controlActions|ControllerConstraints|ControlStructure|feedback|for|Hazards|hierarchyLevel|label|Losses|LossScenarios|MAX|MIN|not-provided|notProviding|processModel|provided|providing|Responsibilities|SafetyRequirements|stopped-too-soon|stoppedTooSoon|SystemConstraints|too-early|too-late|tooEarly/Late|UCAs|wrong-time)\\b|\\b(contexts:|controlAction:|type:)\\B"
    },
    {
      "name": "string.quoted.double.stpa",
      "begin": "\"",
      "end": "\""
    },
    {
      "name": "string.quoted.single.stpa",
      "begin": "'",
      "end": "'"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.stpa",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.stpa"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.stpa"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.stpa"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.stpa"
        }
      ]
    }
  }
}