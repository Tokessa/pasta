{
  "name": "stpa",
  "scopeName": "source.stpa",
  "fileTypes": [
    ".stpa"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "name": "keyword.control.stpa",
      "match": "\\b(Bye|Hello|person)\\b"
    },
    {
      "name": "keyword.symbol.stpa",
      "match": "(\\!)"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.stpa",
          "begin": "/\\*",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.comment.stpa"
            }
          },
          "end": "\\*/",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.comment.stpa"
            }
          }
        },
        {
          "begin": "//",
          "beginCaptures": {
            "1": {
              "name": "punctuation.whitespace.comment.leading.stpa"
            }
          },
          "end": "(?=$)",
          "name": "comment.line.stpa"
        }
      ]
    }
  }
}